<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <properties>
        <b3dgs.version>1.0.0</b3dgs.version>
        <buildtools-project>tyrian-buildtools</buildtools-project>
        <lionengine.version>8.3.5</lionengine.version>
    </properties>
    <parent>
        <groupId>com.b3dgs</groupId>
        <artifactId>b3dgs-parent</artifactId>
        <version>1.0.0</version>
    </parent>
    <groupId>com.b3dgs.tyrian</groupId>
    <artifactId>tyrian-parent</artifactId>
    <packaging>pom</packaging>
    <version>0.3.0</version>
    <name>Tyrian Remake</name>
    <description>Remake of the original Tyrian on the DOS by Epic Games</description>
    <url>https://github.com/b3dgs/tyrian-remake</url>
    <organization>
        <name>Byron 3D Games Studio</name>
        <url>www.b3dgs.com</url>
    </organization>
    <scm>
        <url>https://github.com/b3dgs/tyrian</url>
        <connection>scm:git:git@github.com:b3dgs/tyrian.git</connection>
        <developerConnection>scm:git:git@github.com:b3dgs/tyrian.git</developerConnection>
        <tag>HEAD</tag>
    </scm>
    <profiles>
        <profile>
            <id>game</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <modules>
                <module>../tyrian-buildtools</module>
                <module>../tyrian-game</module>
            </modules>
        </profile>
        <profile>
            <id>editor</id>
            <modules>
                <module>../com.b3dgs.tyrian.target</module>
                <module>../com.b3dgs.tyrian.editor</module>
                <module>../com.b3dgs.tyrian.editor.product</module>
            </modules>
        </profile>
        <profile>
            <id>target</id>
            <modules>
                <module>../tyrian-buildtools</module>
                <module>../tyrian-game</module>
                <module>../tyrian-android</module>
                <module>../tyrian-pc</module>
            </modules>
        </profile>
    </profiles>
    <dependencies>
        <dependency>
            <groupId>com.b3dgs.lionengine</groupId>
            <artifactId>lionengine-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.b3dgs.lionengine</groupId>
            <artifactId>lionengine-game</artifactId>
        </dependency>
    </dependencies>
    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>com.b3dgs.lionengine</groupId>
                <artifactId>lionengine-core</artifactId>
                <version>${lionengine.version}</version>
            </dependency>
            <dependency>
                <groupId>com.b3dgs.lionengine</groupId>
                <artifactId>lionengine-game</artifactId>
                <version>${lionengine.version}</version>
            </dependency>
            <dependency>
                <groupId>junit</groupId>
                <artifactId>junit</artifactId>
                <version>${junit.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-checkstyle-plugin</artifactId>
            </plugin>
        </plugins>
    </build>
</project>